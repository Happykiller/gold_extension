{
  "name": "Gold",
  "description": "Extension Gold",
  "version": "0.3.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "./popup/index.html",
    "default_title": "Gold Extension",
    "default_icon": "./medias/icon_extensions.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "*://*.happykiller.net/*",
        "*://*.banquepopulaire.fr/*"
      ],
      "js": ["./content/content.js"],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "./medias/icon_extensions.png",
    "48": "./medias/icon_extensions.png",
    "128": "./medias/icon_extensions.png"
  },
  "content_security_policy": {
    "script-src": "self",
    "object-src": "self",
    "script-src-elem": "self"
  },
  "background": {
    "service_worker": "./background/background.js"
  },
  "permissions": [
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "http://localhost/*",
    "*://*.happykiller.net/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "medias/logo.png" ],
      "matches": ["<all_urls>"]
    }
  ],
  "optional_permissions": []
}